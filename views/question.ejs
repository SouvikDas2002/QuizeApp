<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quiz Questions</title>
</head>
<body>
    <h1>Quiz Questions</h1>
    <div id="quizQuestions"></div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        async function getquest() {
            try {
                const response = await fetch("http://localhost:3000/getquestion");
                const data = await response.json();
                console.log(data);

                // Shuffle the array of questions
                const shuffledQuestions = shuffle(data);

                // Select the first 5 questions
                const selectedQuestions = shuffledQuestions.slice(0, 5);

                // Clear previous content
                $('#quizQuestions').empty();

                // Loop through the selected questions and create HTML elements
                selectedQuestions.forEach(question => {
                    let optionsHtml = "";
                    if (question.option && question.option.length > 0) {
                        question.option.forEach(option => {
                            optionsHtml += `
                                <div>
                                    <input type="checkbox" id="${option}" name="${question.title}" value="${option}">
                                    <label for="${option}">${option}</label>
                                </div>
                            `;
                        });
                    }
                    const questionElement = `
                        <div class="question">
                            <h3>${question.question}</h3>
                            ${optionsHtml}
                        </div>
                    `;
                    $('#quizQuestions').append(questionElement);
                });
            } catch (error) {
                console.error('Error fetching data:', error);
            }
        }

        // Function to shuffle an array
        function shuffle(array) {
            let currentIndex = array.length, randomIndex;
            while (currentIndex != 0) {
                randomIndex = Math.floor(Math.random() * currentIndex);
                currentIndex--;
                [array[currentIndex], array[randomIndex]] = [array[randomIndex], array[currentIndex]];
            }
            return array;
        }

        // Call the function when the page loads
        $(document).ready(function() {
            getquest();
        });
    </script>
</body>
</html>
